# App
APP_NAME=CongoPay
APP_ENV=development
PORT=8080
LOG_LEVEL=info

# Database (PostgreSQL)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=congopay
POSTGRES_PASSWORD=congopay
POSTGRES_DB=congopay
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# Redis
REDIS_URL=redis://redis:6379/0

# JWT / Security
JWT_SECRET=change-me

# SMS/USSD Provider (set and configure one)
SMS_PROVIDER=africastalking
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_SENDER_ID=
# Alternative example:
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM_NUMBER=

